<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:viewBindingIgnore="false"
    tools:context=".Acyivity.AddContacts">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:orientation="vertical"
        android:background="#F7F7F7"
        android:gravity="center_horizontal"
        android:outlineSpotShadowColor="#000000"
        android:elevation="10dp"
        android:paddingTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Contact"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"/>

            <ImageView
                android:id="@+id/checkEdite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check"
                android:layout_weight="1"
                android:layout_gravity="end|center_horizontal"
                />


        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="32dp"
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img"
            tools:ignore="MissingConstraints" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="start"
        android:layout_marginTop="34.4dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mobile"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saving to"
                android:textSize="17dp"
                android:textFontWeight="700"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="14dp"
                android:textFontWeight="700"
                android:textColor="#6E000000"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="start|center_vertical"
        android:layout_marginTop="27dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="23.3dp"
            android:padding="8dp"
            android:shadowColor="@color/black"
            android:background="@drawable/edit_text_shape"
            android:elevation="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="start|center_vertical"
        android:layout_marginTop="27dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/telephone"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/editTextTextPhoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="23.3dp"
            android:ems="10"
            android:padding="8dp"
            android:shadowColor="@color/black"
            android:background="@drawable/edit_text_shape"
            android:elevation="50dp"
            android:inputType="phone"
            android:hint="phone" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="start|center_vertical"
        android:layout_marginTop="27dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/email"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/editTextTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="23.3dp"
            android:ems="10"
            android:padding="8dp"
            android:shadowColor="@color/black"
            android:shadowDy="50"
            android:background="@drawable/edit_text_shape"
            android:elevation="50dp"
            android:inputType="textEmailAddress"
            android:hint="Email" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="start|center_vertical"
        android:layout_marginTop="27dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_on_24"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/editTextTextAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="23.3dp"
            android:ems="10"
            android:padding="8dp"
            android:shadowColor="@color/black"
            android:shadowDy="50"
            android:background="@drawable/edit_text_shape"
            android:elevation="50dp"
            android:inputType="textPostalAddress"
            android:hint="Adress" />


    </LinearLayout>





</LinearLayout>